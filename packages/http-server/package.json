{
  "name": "mts-http-server",
  "description": "MTS HTTP Server",
  "homepage": "https://github.com/mts/mts/#readme",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/mts/mts.git",
    "directory": "packages/server"
  },
  "version": "0.16.0",
  "engines": {
    "node": "13.8.0",
    "npm": "6.13.7"
  },
  "main": "src/index.js",
  "files": [
    "build"
  ],
  "keywords": [
    "mts http server"
  ],
  "author": {
    "name": "MTS",
    "url": "https://github.com/mts"
  },
  "scripts": {
    "start": "nodemon --watch src/server.js --watch ../client/src --ext '.js,.jsx' --ignore 'src/mts' src/index.js",
    "start-local": "rimraf src/mts && nodemon --watch src/server.js --watch ../client/src --ext '.js,.jsx' --ignore 'src/mts' src/index.js",
    "serve": "npm start",
    "prebuild": "rimraf build",
    "build": "babel src --out-dir build --copy-files --extensions '.js,.jsx'",
    "release": "npm publish",
    "uninstall-packages": "rm -rf node_modules package-lock.json",
    "install-packages": "npm install",
    "reinstall-packages": "npm-run-all uninstall-packages install-packages",
    "npm-update": "npm update"
  },
  "dependencies": {
    "@babel/cli": "^7.10.5",
    "nodemon": "^1.19.4",
    "npm-run-all": "^4.1.5",
    "rimraf": "^3.0.2"
  }
}
